<LoginScreen>:
    BoxLayout:
        id:box_layout_screen
        padding: 60
        canvas.before:
            Color:
                rgb: 0.7, 0.7, 0.7
            Rectangle:
                size: self.size
                pos: self.pos
        orientation:'vertical'
        BoxLayout:
            id:header_boxlayout_loginscreen
            size_hint:(1,0.11)
            MDLabel:
                text:'Welkom in de Zwerfbond app'
                halign: "center"
                font_style:'H4'
                size_hint:(0.7,1)
            Image:
                source:'Icon.png'
                size_hint_y:1
                allow_stretch:True
                size_hint:(0.3,1)
        MDLabel:
            id:download_map_label
            markup:True
            size_hint:(1,0.05)
        MDTextField:
            id:password_input
            hint_text:"Wachtwoord"
            helper_text: "Mogelijk is het ingevoerde wachtwoord niet correct."
            markup:True
            helper_text_mode: "on_error"
            pos_hint: {"center_x": .5}
        MDLabel:
            text:''
            size_hint:(1,0.02)
        MDFillRoundFlatButton:
            spacing:20
            id:download_button
            size_hint:(None,0.05)
            text:'Download de kaart'
            font_style:'Body1'
            pos_hint: {"center_x": .5}
            md_bg_color: 0, 0, 0, 0.1
            margin: 20
            text_color: "black"
            line_color: "red"
            on_release:
                root.verify_password()
        ProgressBar:
            id:progress_bar
            max:1
            value:0
            size_hint:(1,0.05)
        MDLabel:
            size_hint:(1,0.05)
            text:'Let op! Wij raden aan om de kaart te downloaden als u met wifi verbonden bent.'
            font_size:24
            halign: "center"
        MDRoundFlatButton:
            id:cancel_button
            size_hint:(None,0.005)
            pos_hint: {"center_x": .5}
            text:'De nieuwe kaart niet downloaden'
            halign: "center"
            text_color: "black"
            line_color: "red"
            md_bg_color: 0, 0, 0, 0.2
            opacity: 0
            disabled: True
            on_release:
                root.switch_screen()

<RoutesIndexScreen>:
    BoxLayout:
        orientation:'vertical'
        BoxLayout:
            id:header_boxlayout
            canvas.before:
                Color:
                    rgb: 0.7, 0.7, 0.7
                Rectangle:
                    size: self.size
                    pos:self.pos
            size_hint:(1,0.2)
            Label:
                id:label_tour_name
                font_size:48
                bold:True
                size_hint:(.8,1)
        BoxLayout:
            id:menu_boxlayout
            orientation:'vertical'

<RouteMapScreen>:
    FloatLayout:
        MapView:
            id:mapview
            zoom: 16
            double_tap_zoom: True
            MapMarkerPopup:
                source:'blue_gps_dot.png'
                id: gps_tracker
            MapMarkerPopup:
                id:eind_marker
                source: "red_flag_gps.png"
                Label:
                    id:label_eind_marker
                    color: 0,0,0,1
                    font_size: 24
                    bold: True
